#
# Makefile for derivatives
#

# Clear the list of suffixes
.SUFFIXES:
# Default compilation Suffix rules for .c .o
.SUFFIXES: .c .o

#
# Macros
#

CC = gcc

GCC_OPTIONS = -O2 -Wall

LIBS = -lm

OBJECTS = aero.o aerolink.o englink.o engines.o fcs.o stab.o iolib.o\
model.o gear.o derivatives.o systems.o

COMMON_OBJECTS = clocks.o dted.o maths.o weather.o 

COMMON_OBJECTS_DIR = ../libs/

#
# Targets
#

### derivatives program

derivatives: $(OBJECTS) $(addprefix $(COMMON_OBJECTS_DIR)/, $(COMMON_OBJECTS))
	$(CC) -o $@ $(OBJECTS) $(addprefix $(COMMON_OBJECTS_DIR)/, $(COMMON_OBJECTS)) $(LIBS)

### SUFFIX rule statement

%.o : %.c
	$(CC) $(GCC_OPTIONS) -c $<

### Clean up

clean:
	rm *.o derivatives

